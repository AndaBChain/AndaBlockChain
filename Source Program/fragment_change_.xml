<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.onets.wallet.ui.Change_Fragment">

    <!-- TODO: Update blank fragment layout -->
<WebView
    android:id="@+id/webview"
    android:layout_width="match_parent"
    android:layout_height="300dp"></WebView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兑换"
        android:textSize="33dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXX网兑换比率:  "
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0000"
            android:textSize="22dp"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <EditText
            android:id="@+id/et_1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edittext_border"
            android:singleLine="true"
            android:textSize="25dp"
            android:digits="1234567890.+-*/%\n()"
            />
        <TextView
            android:id="@+id/tv_1"
            android:layout_toRightOf="@id/et_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="22dp"/>
        <EditText
            android:id="@+id/et_2"
            android:layout_toRightOf="@id/tv_1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edittext_border"
            android:singleLine="true"
            android:textSize="25dp"
            android:digits="1234567890.+-*/%\n()"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/et_3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:text="ETH"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_toRightOf="@id/et_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/et_4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/tv_2"
            android:layout_toRightOf="@+id/tv_2"
            android:text="BTC"
            android:textSize="25dp" />
    </RelativeLayout>

</LinearLayout>
