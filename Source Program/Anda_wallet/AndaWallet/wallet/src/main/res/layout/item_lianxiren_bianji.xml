<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/dialog_beijing"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_lianxiren_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联  系  人："
            android:textColor="#0ff"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/et_lianxiren_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_lianxiren_2"
        android:layout_below="@id/ll_lianxiren_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子邮箱："
            android:textColor="#0ff"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/et_lianxiren_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"/>

    </LinearLayout>
    <LinearLayout
    android:id="@+id/ll_lianxiren_3"
    android:layout_below="@id/ll_lianxiren_2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="奖币地址："
        android:textColor="#0ff"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/et_lianxiren_coinaddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/alert_light_frame"/>

</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_lianxiren_4"
        android:layout_below="@id/ll_lianxiren_3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标        签："
            android:textColor="#0ff"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/et_lianxiren_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"/>

    </LinearLayout>

</RelativeLayout>