spring:
   profiles:
#    active: node1
leveldb:
  data-dir: block-data
server:
  port: 8081

# 全局配置
settings:
  # 是否启用节点发现，鉴于网上很多同学都吐槽说项目启动的时候一直不断的抛出异常，其实这是系统启动之后自动同步其他节点的最新区块数据导致的
  # 因为 tio 配置的初始同步节点都没有启动，所以一直抛出连接超时的异常，其实这并不影响系统运行，
  # 但是为了方便那些有强迫症的同学（本人也是强迫症患者），在这里增加这配置，默认部署成单节点，不同步数据。
  node-discover: false
  # 发生交易时是否自动挖矿
  auto-mining: true


# 关闭 tio 日志
logging:
  level:
    org:
# tio 网络框架配置
tio:
  heart-timeout: 5000
  client-group-name: aizone-block-client
  server-group-context-name: aizone-block-server
  # 服务端监听的端口
  server-port: 5678
  # 服务端绑定的 IP
  server-ip: 127.0.0.1
  nodes:
    -
      ip: 127.0.0.1
      port: 5678